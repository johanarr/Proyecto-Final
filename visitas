    <div class="container">
        <p>Esta p치gina ha sido vista:</p>
        <div class="counter" id="counter">0</div>
        <p>Veces</p>
    </div>

    <script>
        // Obtener el contador actual del localStorage
        let contador = localStorage.getItem('contadorIngresos');
        if (!contador) {
            contador = 0;
        } else {
            contador = parseInt(contador, 10);
        }

        // Incrementar el contador
        contador++;

        // Guardar el nuevo valor en localStorage
        localStorage.setItem('contadorIngresos', contador);

        // Mostrar el contador en la p치gina
        document.getElementById('counter').textContent = contador;
    </script>
